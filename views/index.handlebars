<div class="row">
  <h1 class="three columns">Word Game</h1>
</div>

<div class="row">
  <form class="three columns" action="/newgame" method="post">
    <input class="twelve columns" type="submit" value="New Game">
  </form>
</div>

<hr>



<form action="/check" method="post">
  <div class="row">
  <input class="six columns"type="text" name="guess" value="" placeholder="Please guess one letter at a time!">
  <input class="button button-primary two columns" type="submit" name="" value="Guess">
  </div>
</form>

<ul>
  {{#each errors}}
  <div class="row">
  <h6 class="four columns">ERROR: {{msg}}</h6>
  </div>
  {{/each}}
</ul>

{{#if winState}}
<h1>{{winState}}</h1>
{{else}}
<h1>{{letterSpace}}</h1>
{{/if}}


<hr>
<h3>Turns Left: {{guessCounter}}</h3>
<h5>Letters Guessed: {{guesses}}</h5>
